{
	"name": "hwis",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"packageManager": "bun@1.3.6",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "husky",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest run",
		"test:unit:watch": "vitest",
		"test:unit:convex": "vitest run src/convex",
		"test:e2e": "playwright test",
		"test:e2e:setup": "bash scripts/setup-test-users.sh",
		"test:e2e:auth": "bunx playwright test --project=authenticated",
		"test:all": "bun run test:unit -- --run && bun run test:e2e:setup && bun run test:e2e && bun run test:e2e:auth",
		"test": "bun run test:unit -- --run && bun run test:e2e",
		"precommit": "bun run test:e2e",
		"lint": "eslint . && prettier --check .",
		"format": "prettier --write ."
	},
	"devDependencies": {
		"@edge-runtime/vm": "^5.0.0",
		"@eslint/compat": "^1.4.1",
		"@eslint/js": "^9.39.2",
		"@internationalized/date": "^3.10.0",
		"@lucide/svelte": "^0.561.0",
		"@playwright/test": "^1.57.0",
		"@sveltejs/adapter-vercel": "^6.2.0",
		"@sveltejs/kit": "^2.49.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.1.17",
		"@testing-library/dom": "^10.4.1",
		"@testing-library/svelte": "^5.3.1",
		"@testing-library/user-event": "^14.6.1",
		"@types/node": "^20",
		"@vitest/browser": "^4.0.17",
		"@vitest/browser-playwright": "^4.0.17",
		"bits-ui": "^2.14.4",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"convex-helpers": "^0.1.109",
		"convex-test": "^0.0.41",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.14.0",
		"globals": "^16.5.0",
		"husky": "^9.1.7",
		"jsdom": "^27.4.0",
		"playwright": "^1.57.0",
		"prettier": "^3.7.4",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"svelte": "^5.45.6",
		"svelte-check": "^4.3.4",
		"tailwind-merge": "^3.4.0",
		"tailwind-variants": "^3.2.2",
		"tailwindcss": "^4.1.17",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.53.1",
		"vite": "^7.2.6",
		"vite-plugin-devtools-json": "^1.0.0",
		"vitest": "^4.0.17",
		"vitest-browser-svelte": "^2.0.1"
	},
	"dependencies": {
		"@convex-dev/better-auth": "^0.10.9",
		"@mmailaender/convex-better-auth-svelte": "^0.5.0",
		"better-auth": "1.4.9",
		"convex": "^1.31.3",
		"convex-svelte": "^0.0.12"
	}
